<!--
Originally from the np++ forum, but tweaked by bgmCoder on Sunday, November 29, 2020
https://community.notepad-plus-plus.org/topic/20397/is-there-a-good-css-class-parser
-->


<NotepadPlus>
	<functionList>
		<parser
			displayName="CSS"
			id         ="css_class"
			commentExpr="(?s:/\*.*?\*/)"
		>
			<function
				mainExpr="([\.\#\@]?\w[\.\w\:, \-\r\n\t\(\)]+)+ *[\r\n,]*? *(?>{)+?" 
			>
				<functionName>
					<nameExpr expr="(?:(.[\r\n]?)+(?=[\r\n]*\{))" />
				</functionName>

			</function>
		</parser>
	</functionList>
</NotepadPlus>		

