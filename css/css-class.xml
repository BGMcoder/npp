<!-- css.xml by bgmCoder https://github.com/BGMcoder/npp/tree/main/css -->
<!-- To use this, rename it to css.xml before you put it in your functionlist folder -->
<!--
Originally from the np++ forum, but tweaked by bgmCoder on Sunday, November 29, 2020
https://community.notepad-plus-plus.org/topic/20397/is-there-a-good-css-class-parser
Unless you have a fast computer, this functionlist can be rather slow.
I recommend the other css-comment.xml for speed.  It's easier to read, too.
-->


<NotepadPlus>
	<functionList>
		<parser
			displayName="CSS"
			id         ="css_class"
			commentExpr="(?s:/\*.*?\*/)"
		>
			<function
				mainExpr="([\.\#\@]?\w[\.\w\:, \-\r\n\t\(\)]+)+ *[\r\n,]*? *(?>{)+?" 
			>
				<functionName>
					<nameExpr expr="(?:(.[\r\n]?)+(?=[\r\n]*\{))" />
				</functionName>

			</function>
		</parser>
	</functionList>
</NotepadPlus>		

